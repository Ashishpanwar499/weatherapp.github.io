       <script>
        const getCurrentDay =()=>{
          let weekday=new Array(7);
          weekday[0]="sunday";
            weekday[1]="Monday";
              weekday[2]="Tuesday";
                weekday[3]="wed";
                  weekday[4]="thursday";
                    weekday[5]="Friday";
                     weekday[6]="Saturday";
                  let currentTime =new Date();
                  days=weekday[currentTime].getDay()];
